      "source": [
        "import numpy as np\n",
        "import struct\n",
        "from google.colab import files\n",
        "\n",
        "def read_half16_data(file, num_vertices, num_properties):\n",
        "    expected_size = num_vertices * num_properties * 2  # 2 bytes per half16\n",
        "    data = file.read(expected_size)\n",
        "    actual_size = len(data)\n",
        "    if actual_size != expected_size:\n",
        "        raise ValueError(f\"Read {actual_size} bytes, expected {expected_size} bytes.\")\n",
        "    # Interpret the binary data as uint16, then view it as float16\n",
        "    return np.frombuffer(data, dtype=np.uint16).view(np.float16).reshape(num_vertices, num_properties)\n",
        "\n",
        "def write_float32_data(filename, float_data, property_names):\n",
        "    num_vertices = float_data.shape[0]\n",
        "    properties_header = \"\\n\".join([f\"property float {name}\" for name in property_names])\n",
        "    header = f\"\"\"ply\n",
        "format binary_little_endian 1.0\n",
        "comment Z-axis up\n",
        "element vertex {num_vertices}\n",
        "{properties_header}\n",
        "end_header\n",
        "\"\"\"\n",
        "    with open(filename, 'wb') as f:\n",
        "        f.write(header.encode('ascii'))\n",
        "        for vertex in float_data:\n",
        "            f.write(struct.pack(f'{len(property_names)}f', *vertex))\n",
        "\n",
        "def extract_num_vertices(header_lines):\n",
        "    for line in header_lines:\n",
        "        if line.startswith(\"element vertex\"):\n",
        "            return int(line.split()[-1])\n",
        "    raise ValueError(\"Number of vertices not found in the header\")\n",
        "\n",
        "def extract_property_names(header_lines):\n",
        "    return [line.split()[-1] for line in header_lines if line.startswith(\"property\")]\n",
        "\n",
        "def convert_ply(input_file, input_filename, output_filename):\n",
        "    header_lines = []\n",
        "    while True:\n",
        "        line = input_file.readline().decode('ascii')\n",
        "        header_lines.append(line.strip())\n",
        "        if line.strip() == 'end_header':\n",
        "            break\n",
        "\n",
        "    num_vertices = extract_num_vertices(header_lines)\n",
        "    property_names = extract_property_names(header_lines)\n",
        "    print(f\"Number of vertices: {num_vertices}, Properties: {property_names}\")\n",
        "\n",
        "    half16_data = read_half16_data(input_file, num_vertices, len(property_names))\n",
        "    float32_data = half16_data.astype(np.float32)\n",
        "\n",
        "    write_float32_data(output_filename, float32_data, property_names)\n",
        "    return output_filename\n",
        "\n",
        "# Upload file\n",
        "uploaded = files.upload()\n",
        "input_filename = next(iter(uploaded))\n",
        "\n",
        "# Generate output filename by appending '_float32' before the file extension\n",
        "base_name = input_filename.rsplit('.', 1)[0]\n",
        "output_filename = f\"{base_name}_float32.ply\"\n",
        "\n",
        "# Process the file\n",
        "with open(input_filename, 'rb') as input_file:\n",
        "    output_file = convert_ply(input_file, input_filename, output_filename)\n",
        "\n",
        "# Download the result\n",
        "files.download(output_file)"
      ]
    }
